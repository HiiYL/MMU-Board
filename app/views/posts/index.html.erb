<div class="container post-container">
<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>
<% @posts.each do |post| %>
  <%= link_to post do %>
    <div class="row">
      <div class="col s3">
      <%= image_tag "placeholder-user.png", height:"100px" %> <br>
      <%= post.user.email %>
      </div>
      <div class="col s9">
        <h4><%= post.title %></h4>
        <%= post.content %>
      </div>
    </div>
  <% end %>
<% end %>

<br>

<%= link_to 'New Post', new_post_path, class: "btn waves-effect waves-light" %>
</div>
