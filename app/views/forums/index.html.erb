<div class="parallax-container">
  <div class="parallax">
  <%= image_tag "space.png" %></div>
  </div>
  <p id="notice"><%= notice %></p>
  <div class="section white">
    <div class="row container">
      <h2 class="header">General</h2>
      <% @forums.each do |forum| %>
      <div class="col s12 m4">
        <div class="card">
            <div class="card-image waves-effect waves-block waves-light">
              <%= image_tag forum.users.first.gravatar_url %>
            </div>
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4"><%= forum.name %></i></span>
              <p><%= link_to 'View', forum %></p>
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4">Card Titleclose</i></span>
              <p><%= forum.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
